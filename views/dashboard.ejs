<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
    }
    .sidebar {
      width: 200px;
      background: #343a40;
      color: white;
      height: 100vh;
      padding: 20px;
    }
    .sidebar a {
      display: block;
      color: white;
      margin-bottom: 10px;
      text-decoration: none;
    }
    .chat-container {
      flex-grow: 1;
      padding: 20px;
    }
    .message {
      max-width: 60%;
      padding: 10px 15px;
      border-radius: 10px;
      margin-bottom: 10px;
    }
    .message-left {
      background-color: #f1f1f1;
      text-align: left;
      align-self: flex-start;
    }
    .message-right {
      background-color: #d1e7dd;
      text-align: right;
      align-self: flex-end;
      margin-left: auto;
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <h4>Dashboard</h4>
    <a href="#">Home</a>
    <a href="#">Messages</a>
    <a href="#">Settings</a>
    <a href="#">Logout</a>
  </div>

  <div class="chat-container d-flex flex-column">
    <h3>Chat</h3>

    <!-- Example Chat Messages -->
    <div class="d-flex flex-column">
      <div class="message message-left">
        <strong>Alice:</strong><br>
        Hello! How are you?
      </div>
      <div class="message message-right">
        <strong>You:</strong><br>
        I'm good, thanks!
      </div>
      <div class="message message-left">
        <strong>Alice:</strong><br>
        Want to meet today?
      </div>
    </div>

    <!-- Chat Input -->
    <form action="/send-message" method="POST" class="mt-4 d-flex">
      <input type="text" name="message" class="form-control me-2" placeholder="Type your message..." required>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>
  </div>

</body>
</html>
